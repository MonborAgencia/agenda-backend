FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY apps/backend/package*.json ./
COPY package*.json /root/

# Install dependencies
RUN npm install

# Copy source code
COPY apps/backend/ ./

# Generate Prisma client
RUN npx prisma generate

# Expose port
EXPOSE 3001

# Start development server
CMD ["npm", "run", "dev"]