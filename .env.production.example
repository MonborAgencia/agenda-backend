# Configuração de Produção - Vercel + HostGator

# Database (MySQL HostGator)
DATABASE_URL="mysql://cpanel_user:password@server.hostgator.com:3306/cpanel_agenda_prod"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here-change-this"

# Environment
NODE_ENV="production"

# CORS Origins
CORS_ORIGINS="http://agenda24h.monbor.com.br,https://agenda24h.monbor.com.br"

# API Configuration
API_PORT=3001
API_BASE_URL="https://agenda-api.vercel.app"

# Redis (opcional - pode usar sem Redis inicialmente)
# REDIS_URL="redis://localhost:6379"

# Email (opcional)
# SMTP_HOST="smtp.hostgator.com"
# SMTP_PORT=587
# SMTP_USER="noreply@seudominio.com"
# SMTP_PASS="sua-senha"

# Upload (opcional)
# UPLOAD_MAX_SIZE=5242880
# UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif"

# Monitoring (opcional)
# ENABLE_METRICS=true
# LOG_LEVEL="info"